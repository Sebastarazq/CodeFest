extends ../layout/index

block content
  .row
    .col-md-6.mx-auto
      .card
        .card-header
          h2 Iniciar Sesión
        .card-body
          form(action="/iniciar-sesion" method="post")
            .form-group
              label(for="email") Correo Electrónico
              input#email.form-control(type="email" name="email" required)
            .form-group
                label(for="contrasena") Contraseña
                input#contrasena.form-control(type="password" name="contrasena" required)
            button.btn.btn-primary(type="submit") Iniciar Sesión

  .container.text-center
    a(href="/registro") ¿No tienes una cuenta? Regístrate