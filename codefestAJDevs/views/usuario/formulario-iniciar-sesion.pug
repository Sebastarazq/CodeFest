extends ../layout/index

block content
    section.vh-100
      div.container.py-5.h-100
        div.row.d-flex.align-items-center.justify-content-center.h-100
          div.col-md-8.col-lg-7.col-xl-6
            img(src="/img/logo.png", alt="logo", class="img-fluid")
          div.col-md-7.col-lg-5.col-xl-5.offset-xl-1
            form(action="/iniciar-sesion", method="post")
              //- Email input
              div.form-outline.mb-4
                label(for="email", class="form-label") Correo electrónico
                input(type="email", id="form1Example13", name="email", class="form-control form-control-lg", required)
              //- Password input
              div.form-outline.mb-4
                label(for="contrasena", class="form-label") Contraseña
                input(type="password", id="form1Example23", name="contrasena", class="form-control form-control-lg", required)
              div.d-flex.justify-content-around.align-items-center.mb-4
                //- Checkbox
                div.form-check
                  input(type="checkbox", class="form-check-input", value="", id="form1Example3", checked, required)
                  label(for="form1Example3", class="form-check-label") Recuérdame
                a(href="#") ¿Olvidaste tu contraseña?
              //- Submit buttons
              button.btn.btn-primary.btn-lg.btn-block.btn-custom(type="submit") Iniciar Sesión
              a(href="/front/register.html", class="btn btn-primary btn-lg btn-block btn-custom") Registrate
              if error
                .alert.alert-danger
                  p= error
