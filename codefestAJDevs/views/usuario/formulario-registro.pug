extends ../layout/index

block content
  section.vh-100
    div.container.py-5.h-100
      div.row.dflex.align-items-center.justify-content-center.h-100
        div.col-md-8.col-lg-7.col-xl-6
          img(src="/img/logo.png", alt="logo", class="img-fluid")
        div.col-md-7.col-lg-5.col-xl-5.offset-xl-1
          if errors
            .alert.alert-danger
              each error in errors
                p= error.msg
          if error
            .alert.alert-danger
              p= error
          form(action="/registro-usuario", method="post")
            //- Nombre input
            div.form-outline.mb-4
              label(for="nombre", class="form-label") Nombre
              input#nombre.form-control(type="text", name="nombre", class="form-control form-control-lg", required)
            //- Apellido input
            div.form-outline.mb-4
              label(for="apellido", class="form-label") Apellido
              input#apellido.form-control(type="text", name="apellido", class="form-control form-control-lg", required)
            //- Email input
            div.form-outline.mb-4
              label(for="email", class="form-label") Correo Electrónico
              input#email.form-control(type="email", name="email", class="form-control form-control-lg", required)
            //- Password input
            div.form-outline.mb-4
              label(for="contrasena", class="form-label") Contraseña
              input#contrasena.form-control(type="password", name="contrasena", class="form-control form-control-lg", required)
            //- Confirm Password input
            div.form-outline.mb-4
              label(for="confirmarContrasena", class="form-label") Confirmar Contraseña
              input#confirmarContrasena.form-control(type="password", name="confirmarContrasena", class="form-control form-control-lg", required)
            //- Submit button
            button.btn.btn-primary.btn-lg.btn-block.btn-custom(type="submit") Registrate
          .container.text-center
            a(href="/iniciar-sesion") ¿Ya tienes una cuenta? Inicia Sesión
